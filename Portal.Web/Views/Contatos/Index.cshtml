<style>
    @@keyframes fa-blink {
     0% { opacity: 1; }
     50% { opacity: 0.5; }
     100% { opacity: 0; }
     }
    .fa-blink {
        -webkit-animation: fa-blink 1.00s linear infinite;
        -moz-animation: fa-blink 1.00s linear infinite;
        -o-animation: fa-blink 1.00s linear infinite;
        animation: fa-blink 1.00s linear infinite;
    }
