<h2 class="cabecalhoInicial">Contatos</h2>
<div class="panel">
    <!--Block Styled Form -->
    <!--===================================================-->
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="panel-body justify-content-center" id="painelVisSinistro" style="background-image: linear-gradient(to bottom right, #25476a, #0094ff); border: 1px solid #ddd; border-radius: 10px;">
            <div style="padding-left: 10px; color:white">
                <h3 style="color:white" id="tituloContato" onload="adicionar('@Html.DisplayFor(m => Model.ElementAt(i).Titulo)')">@Html.DisplayFor(m => Model.ElementAt(i).Titulo)</h3>
                @for (int j = 0; j < Model.ElementAt(i).Itens.Count; j++)
                {
                    <p>
                        <strong>@Html.DisplayFor(m => Model.ElementAt(i).Itens.ElementAt(j).Cargo): </strong>@Html.DisplayFor(m => Model.ElementAt(i).Itens.ElementAt(j).Nome)
                        @if (ViewBag.Tipo)
                        {
                            <span> - <strong class=" fa-blink"><a href="/Contatos/EditarContatos?Id=@Html.DisplayFor(m => Model.ElementAt(i).Itens.ElementAt(j).Id)" id="alertaesqueceu" style=" color:#fff;" !important;">Clique no link para editar esse Contato</a></strong></span>
                        }
                    </p>
                    if (!string.IsNullOrWhiteSpace(Model.ElementAt(i).Itens.ElementAt(j).Telefone))
                    {
                        <p><strong>Telefone: </strong><span id="telMask">@Html.DisplayFor(m => Model.ElementAt(i).Itens.ElementAt(j).Telefone)</span></p>
                    }
                    <p><strong>E-mail: </strong>@Html.DisplayFor(m => Model.ElementAt(i).Itens.ElementAt(j).Email)</p>
                    if (!string.IsNullOrWhiteSpace(Model.ElementAt(i).Itens.ElementAt(j).Site) )
                    {
                        <p><strong>Site: </strong>@Html.DisplayFor(m => Model.ElementAt(i).Itens.ElementAt(j).Site)</p>
                    }
                }
            </div>
        </div>
        <br />
    }

